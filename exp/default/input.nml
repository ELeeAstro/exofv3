 &main_nml
     days = 20
     dt_atmos = 200
     atmos_nthreads = 1
/
&fms_nml
    clock_grain = 'LOOP'
    domains_stack_size =  10000000
    print_memory_usage = .true.
/

&fms_io_nml
    threading_write = 'multi'
    fileset_write = 'multi'
/

&fms2_io_nml
    netcdf_default_format='netcdf4'
/

&fv_core_nml
    layout = 2, 2
    npx = 25
    npy = 25
    npz = 50
    ntiles = 6
    do_held_suarez = .false.
    adiabatic = .false.
    print_freq = 24
    grid_type = 0
    warm_start = .false.
    vtdm4 = 0.1
    io_layout = 2, 2
    nwat = 0
    inline_q = .true.
    nord = 2
    is_ideal_case = .true.
    fv_debug = .false.
    beta = 0.25
    do_vort_damp = .false.
    a2b_ord = 4
    tau = 0.0
    hydrostatic = .true.
    n_sponge = 0
    non_dilute = .true.
/

&fv_grid_nml
    grid_name = 'Gnomonic'
/

&test_case_nml
    test_case = 14
    alpha = 0.0
/

&integ_phys_nml
    do_intermediate_phys = .false.
/

&sim_phys_nml
    sst_restore_timescale = 0.0
    do_K_warm_rain = .false.
    do_GFDL_sim_phys = .false.
    do_surf_drag = .true.
    do_terminator = .false.
    do_zurita_HS = .false.
/

&GFDL_sim_phys_nml
    diurnal_cycle = .false.
    mixed_layer = .false.
    gray_rad = .false.
    cloudy_rad = .false.
    strat_rad = .false.
    do_abl = .false.
    do_mon_obkv = .false.
    heating_rate = 0.5
    cooling_rate = 0.0
    uniform_sst = .false.
    sst0 = 302.15    
    sst_type = 0
    shift_n = 12.0
    do_t_strat = .false.
    tau_strat = 10.0
    prog_low_cloud = .false.
    low_cf0 = 0.0
    zero_winds = .false.

&exo_phys_nml
    relax_module = .false.
    do_dry_adjustment = .false.
    do_dry_adj_el = .false.
    do_dry_convection = .false.
    do_moist_H2O_adjustment = .false.
    surface_on = .false.
    do_condensation= .false.
    tidally_locked = .true.
    cp_surf = 1.e6
    conv_timescale = 1.e3
    do_virtual = .false.
    do_simple_bl = .false.
    do_vert_diff_bl = .false.
    do_ding_convection = .true.
/

&rad_coupler_nml
    rad_scheme='ts_short_char'
    I0  = 680.0
    Tint = 0.0
    tau_IRe0 = 100
    tau_Ve0  = 10.0
    n_ir = 1.0
    n_v = 1.0
    f1 = 0.5
/

&fv_eta_nml
    flexible_grid = .true.
    pbot = 3.e6
    pup = 0.1
    plin = 10.
/

&initialisation_nml
    init_type = 2
    Ts = 300.
    T_strat = 200.
    S = 680.0
    f = 0.25
    tau_sw = 10
    tau_lw = 100
    tint =0.0
    surface_pressure = 3.e6
/

&init_moisture_nml
    q0 = 3.e-6
/    

